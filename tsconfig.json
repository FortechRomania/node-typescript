{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "declaration": true,
        "sourceMap": true,
        "outDir": "./build",
        "removeComments": true,
        "downlevelIteration": true,
        "noUnusedParameters": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "suppressImplicitAnyIndexErrors": true,
        "noImplicitAny": false,
        "resolveJsonModule": true
    },
    "include": ["src/**/*"]
}
